{
  "compilerOptions": {
    "strict": true,
    "module": "CommonJS",
    "lib": ["ES2023", "DOM"],
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "target": "ES2022",
    "outDir": "lib",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*",
    "drizzle.config.ts"
  ]
}